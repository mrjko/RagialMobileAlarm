<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchField"
        android:width="200dp"
        android:singleLine="true"
        android:lines = "1"
        android:elegantTextHeight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/searchBtn"
        android:layout_alignRight="@+id/vendItems"
        android:layout_alignEnd="@+id/vendItems"
        android:layout_toEndOf="@+id/searchField"
        android:width="90dp"
        android:layout_alignBottom="@+id/searchField" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Alarm"
        android:id="@+id/setAlarmBtn"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/vendItems"
        android:layout_alignEnd="@+id/vendItems"
        android:layout_toRightOf="@+id/searchField"
        android:layout_toEndOf="@+id/searchField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vending Information:"
        android:id="@+id/textView2"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp" />

    <RadioGroup
        android:layout_width="600dp"
        android:layout_height="40dp"
        android:id="@+id/radioGroup"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_below="@+id/searchField"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:transitionGroup="false">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Renewal"
            android:id="@+id/renewalBtn"
            android:checked="false"
            android:layout_below="@+id/searchField"
            android:layout_toRightOf="@+id/classicBtn"
            android:layout_toStartOf="@+id/setAlarmBtn" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Classic"
            android:id="@+id/classicBtn"
            android:checked="false"
            android:layout_below="@+id/searchField"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="30px"
            android:layout_weight="0.17" />

    </RadioGroup>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vendItems"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/setAlarmBtn"
        android:textSize="6sp"
        android:layout_marginTop="30px" />


</RelativeLayout>